generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id                String       @id @default(uuid())
  user_id           String
  created_at        DateTime?    @default(now()) @db.Timestamptz(6)
  date              DateTime
  script            String
  location_type     LocationType @default(ONLINE)
  location          String
  player_count      Int
  player_characters Character[]
  final3            Boolean?
  win               Boolean
  notes             String
  image_urls        String[]
}

model Character {
  id        Int       @id @default(autoincrement())
  name      String
  alignment Alignment
  game      Game?     @relation(fields: [game_id], references: [id])
  game_id   String?
}

enum Alignment {
  GOOD
  EVIL
}

enum LocationType {
  ONLINE
  IN_PERSON
}
