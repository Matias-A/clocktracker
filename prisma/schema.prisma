generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model game {
  id                BigInt    @id @default(autoincrement())
  user_id           String
  created_at        DateTime? @default(now()) @db.Timestamptz(6)
  date              DateTime
  script            String
  location          String
  playerCount       String
  initial_character String
  alignment         Alignment
  final3            Boolean?
  win               Boolean
  notes             String
}

enum Alignment {
  GOOD
  EVIL
}
